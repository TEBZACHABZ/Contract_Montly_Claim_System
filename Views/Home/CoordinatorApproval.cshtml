@model List<Contract_Monthly_Claim_System.Models.Claim>
@{
    ViewData["Title"] = "Coordinator Approval";
}
<div class="container mt-5">
    <h2>Coordinator - Pending Claims</h2>
    <table class="table table-hover mt-3">
        <thead>
            <tr><th>Claim ID</th><th>Lecturer</th><th>Amount</th><th>Submitted</th><th>Action</th></tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.ClaimId</td>
                    <td>@c.Lecturer?.FullName</td>
                    <td>R @c.TotalAmount</td>
                    <td>@c.SubmittedAt.ToLocalTime().ToString("yyyy-MM-dd")</td>
                    <td>
                        <form asp-action="CoordinatorVerify" method="post" style="display:inline;">
                            <input type="hidden" name="claimId" value="@c.ClaimId" />
                            <input type="hidden" name="approve" value="true" />
                            <button type="submit" class="btn btn-success btn-sm">Verify</button>
                        </form>
                        <form asp-action="CoordinatorVerify" method="post" style="display:inline; margin-left:6px;">
                            <input type="hidden" name="claimId" value="@c.ClaimId" />
                            <input type="hidden" name="approve" value="false" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
