@model List<Contract_Monthly_Claim_System.Models.Claim>
@{
    ViewData["Title"] = "Programme Coordinator";
}

<div class="container mt-4">
    <h2 class="text-primary">Programme Coordinator - Claim Verification</h2>

    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Amount</th>
                <th>Submitted</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr><td colspan="6" class="text-center">No pending claims.</td></tr>
            }
            else
            {
                foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@claim.Lecturer?.FullName</td>
                        <td>@claim.HoursWorked</td>
                        <td>R @claim.TotalAmount.ToString("F2")</td>
                        <td>@claim.SubmittedAt.ToLocalTime().ToString("yyyy-MM-dd")</td>
                        <td>
                            <form asp-action="ApproveClaim" asp-controller="Home" method="post" style="display:inline-block">
                                <input type="hidden" name="id" value="@claim.ClaimId" />
                                <button type="submit" class="btn btn-success btn-sm">Verify</button>
                            </form>

                            <form asp-action="RejectClaim" asp-controller="Home" method="post" style="display:inline-block; margin-left:6px;">
                                <input type="hidden" name="id" value="@claim.ClaimId" />
                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
